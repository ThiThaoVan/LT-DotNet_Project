@{
    ViewData["Title"] = "Chi tiết đơn hàng";
    Layout = "_LayoutAdmin";
}

@section CssAdmin {
    <link rel="stylesheet" href="~/assets/css/admin/styleOrderDetail.css" />
}

<body class="dark-theme">

    <div id="main-content">
        <div class="main-container">
            <div class="header">
                <h1>Chi tiết đơn hàng</h1>
            </div>
            <div class="wg-order-detail">
                <div class="flex-grow">
                    <div class="wg-box">
                        <div class="table-order">
                            <ul class="flex-column">
                                @foreach (var product in Model.Products)
                                {
                                    <li class="product-item">
                                        <img src="@Url.Content("~/assets/img_laptop/" + product.HinhAnh)" alt="@product.TenSp" />
                                        <div class="items-center">
                                            <div class="name">
                                                <div class="text-tiny">Tên sản phẩm</div>
                                                <a href="#">@product.TenSp</a>
                                            </div>
                                            <div class="name">
                                                <div class="text-tiny">Số lượng</div>
                                                <a href="#">@product.SoLuong</a>
                                            </div>
                                            <div class="name">
                                                <div class="text-tiny">Giá</div>
                                                <a href="#">@String.Format("{0:#,0}đ", product.DonGia)</a>
                                            </div>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="right">
                    <div class="wg-box" style="gap: 10px">
                        <div class="body-title">Thông tin</div>
                        <div class="summary-item">
                            <div class="body-text">ID đơn hàng</div>
                            <div class="body-title">#@Model.Id</div>
                        </div>
                        <div class="summary-item">
                            <div class="body-text">Tên khách hàng</div>
                            <div class="body-title">@Model.TenDn</div>
                        </div>
                        <div class="summary-item">
                            <div class="body-text">Số điện thoại</div>
                            <div class="body-title">@Model.Sdt</div>
                        </div>
                        <div class="summary-item">
                            <div class="body-text">Ngày tạo đơn</div>
                            <div class="body-title">@Model.NgayDat?.ToString("dd MMM yyyy")</div>
                        </div>
                        <div class="summary-item">
                            <div class="body-text">Địa chỉ giao hàng</div>
                            <div class="body-title">@Model.DiaChiNhan</div>
                        </div>
                        <div class="summary-item">
                            <div class="body-text">Tổng cộng</div>
                            <div class="tf-color-1">@String.Format("{0:#,0}đ", Model.TongTien)</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Nút thoát -->
        <div class="exit-button-container" style="text-align: right; margin-right: 30px;">
            <a href="@Url.Action("listOrder", "Admin")" class="exit-button" style="padding: 10px 20px; background-color: #f44336; color: white; text-decoration: none; border-radius: 5px; font-size: 16px;">
                Thoát
            </a>
        </div>

    </div>

</body>
