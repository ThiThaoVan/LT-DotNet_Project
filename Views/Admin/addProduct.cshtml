@model IEnumerable<WebBanLapTop.ViewModel.CateVM>

@{
    ViewData["Title"] = "Admin";
    Layout = "_LayoutAdmin";
}

@section CssAdmin {
    <link rel="stylesheet" href="~/assets/css/admin/styleAddProduct.css" />
}
<body class="dark-theme">
    <div id="main-content">
        <div class="main-container">
            <div class="items-center">
                <h3>Thêm Sản Phẩm</h3>
                <h2 id="msg" class="text-info"></h2>
               
            </div>
            <div class="addproduct-container">
                <div class="content-inner">
                    <div class="content-wrap">
                        <div class="wrapper">
                            <form action="" class="form-add-product" id="addProductForm">
                                <div class="wg-box">
                                    <fieldset class="name">
                                        <div class="body-title">
                                            Tên sản phẩm
                                            <span>*</span>
                                        </div>
                                        <input id="name"
                                               name="name"
                                               required=""
                                               type="text"
                                               placeholder="Vd: Bút bi xanh" />
                                        <p>Không vượt quá 20 ký tự khi nhập tên sản phẩm.</p>
                                    </fieldset>
                                    <div class="cols">
                                        <fieldset class="Category">
                                            <div class="body-title">
                                                Loại sản phẩm
                                                <span>*</span>
                                            </div>
                                            <div class="select">
                                                <select required="" name="select" id="select">
                                                    <option value="" disabled selected>
                                                        -- Vui lòng chọn --
                                                    </option>
                                                    @foreach (var cate in Model)
                                                    {
                                                        <option value="@cate.Id">@cate.Name</option>
                                                    }
                                                </select>
                                            </div>
                                        </fieldset>
                                        <fieldset class="Gender">
                                            <div class="body-title">
                                                Giá sản phẩm
                                                <span>*</span>
                                            </div>
                                            <div class="select">
                                                <input id="price"
                                                       name="price"
                                                       required=""
                                                       type="text"
                                                       placeholder="Vd: 100.000 " />
                                            </div>
                                        </fieldset>
                                    </div>

                                    <fieldset class="description">
                                        <div class="body-title">
                                            Mô tả
                                            <span>*</span>
                                        </div>
                                        <textarea id="des"
                                                  name="des"
                                                  required=""
                                                  placeholder="Mô tả"></textarea>
                                        <p>Không vượt quá 100 ký tự khi nhập tên sản phẩm.</p>
                                    </fieldset>
                                </div>
                                <div class="wg-box">
                                    <fieldset>
                                        <div class="body-title">Tải hình ảnh lên</div>
                                        <div class="upload-img">
                                            <div class="item-upload">
                                                <label class="uploadfile" for="myFile"> </label>
                                                <input id="img"
                                                       name="img"
                                                       required="" type="file" id="myFile" />
                                                <i class="fa-solid fa-cloud-arrow-up"></i>
                                                <p>
                                                    Thả hình ảnh của bạn vào đây hoặc chọn
                                                    <span>bấm để duyệt</span>
                                                </p>
                                            </div>
                                        </div>
                                        <div class="body-text">
                                            <p>
                                                Bạn cần thêm 3 hình ảnh. Hãy chú ý đến chất lượng hình
                                                ảnh bạn thêm vào, tuân thủ các tiêu chuẩn về màu nền.
                                                Hình ảnh phải có kích thước nhất định. Lưu ý rằng sản
                                                phẩm hiển thị tất cả các chi tiết
                                            </p>
                                        </div>
                                    </fieldset>
                                    <div class="cols">
                                        <fieldset class="name">
                                            <div class="body-title">
                                                Khối lượng <span>*</span>
                                            </div>

                                            <div class="select">
                                                <input id="weight"
                                                       name="weight"
                                                       required=""
                                                       type="number"
                                                       placeholder="Vd: 100" />
                                            </div>
                                        </fieldset>
                                    </div>
                                    <div class="col">
                                        <button id="submitBtn" class="btn1" type="button">Thêm sản phẩm</button>

                                        <button class="btn2" type="reset">
                                            Xóa thông tin đã nhập
                                        </button>
                                        <a style="display:none" class="text-white bg-success" id="btnBack" asp-controller="Admin" asp-action="listProduct">

                                        </a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @section ScriptsAdmin {
        <script src="~/assets/js/CRUDProduct.js"> </script>
    }
</body>