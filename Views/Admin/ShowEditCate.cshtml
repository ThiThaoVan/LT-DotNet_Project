@model WebBanLapTop.Data.Danhmucsanpham 

@{
    ViewData["Title"] = "Sửa Danh mục";
    Layout = "_LayoutAdmin";
}
@section CssAdmin {
    <link rel="stylesheet" href="~/assets/css/admin/styleEditCate" />
}
<body class="dark-theme">
    <div id="main-content">
        <div class="main-container">
            <div class="header">
                <h1>Sửa danh mục</h1>
            </div>
            <div id="addNewCate-container">
                <div class="row align-items-center">

                    <form id="form-editCate" >
                        <div class="row">
                            <span class="msg text-success"></span>
                           
                            <div class="col">
                                <label for="name">Tên danh mục:</label>
                                <input value="@Model.TenDanhMuc" id="name" name="name" type="text" class="form-control" aria-label="Tên danh mục">
                            </div>

                            <div class="col">
                                <label for="cateID">ID danh mục:</label>
                                <input type="text" id="cateID" name="cateID" value="@Model.MaDanhMuc" class="form-control" readonly />
                            </div>

                            <div class="col">
                                <label for="cateImg">Ảnh danh mục:</label>
                                <input value="" id="cateImg" name="cateImg" type="file" class="form-control" aria-label="Ảnh danh mục" />
                                <input id="oldImg" type="hidden" value="@Model.HinhDanhMuc" />
                            </div>
                        </div>
                        <button style="margin-top: 1rem" id="BtnUpdate" type="button" class="btn btn-primary btn-sm px-5 py-2">
                            Cập nhật
                        </button>

                         <button style="margin-top: 1rem; display:none" type="button" id="button" class="btn btn-success btn-sm px-5 py-2">
                            <a class="text-white text-decoration-none" id="btnBack" asp-action="ListCategory" asp-controller="Admin"></a>
                         </button>
                    </form>


                </div>
            </div>
        </div>
    </div>
    @section ScriptsAdmin {
        <script src="~/assets/js/CRUDCategory.js"></script>

    }
</body>
